<div class="container">
  <div class="header row">
    <div class="twelve columns">
      <h4><%= @category.name %></h4>
    </div>
    <!-- Top buttons area starts here -->
    <div class="twelve columns buttons-area">
      <a class="button" id="back-button" href="/">Back</a>
      <a class="button button-primary" id="add-form" href="/categories/<%= @category.id %>/candies/new">Add Candy</a>
    </div> 
  </div>
  <!-- Top buttons area ends here -->
  <!-- Main content area starts here -->
  <div class="row">
    <div class="twelve columns">
      <div class="sh-content">
      <!-- content divided into 4 even columns -->
        <div class="three columns content">
          <% @candies[0..@candies.length/4].each do |c| %>
            <p><a href="/categories/<%= @category.id %>/candies/<%= c.id %>"><%= c.name %></a></p>
          <% end %>
        </div>
        <div class="three columns content">
          <% @candies[@candies.length/4+1..2*@candies.length/4].each do |c| %>
            <p><a href="/categories/<%= @category.id %>/candies/<%= c.id %>"><%= c.name %></a></p>
          <% end %>
        </div>
        <div class="three columns content">
          <% @candies[2*@candies.length/4+1..3*@candies.length/4].each do |c| %>
            <p><a href="/categories/<%= @category.id %>/candies/<%= c.id %>"><%= c.name %></a></p>
          <% end %>
        </div>
        <div class="three columns content">
          <% @candies[3*@candies.length/4+1..-1].each do |c| %>
            <p><a href="/categories/<%= @category.id %>/candies/<%= c.id %>"><%= c.name %></a></p>
          <% end %>
        </div>
        <!-- content division ends here -->
      </div>
    </div>
  </div>
  <!-- Main content area ends here -->
</div>