<div class="container">
  <div class="header row">
    <div class="twelve columns">
      <h4><%= @country.name %> Candy</h4>
    </div>
  <p class="greeting">
    <a class="button button-primary" href="/countries">Countries</a>
  </p>
  </div>
  <div class="row">
    <div class="twelve columns">
      <div class="sh-content">
        <div class="three columns content">
          <% @candies[0..@candies.length/4].each do |c| %>
            <p><a href="/countries/<%= @country.id %>/candies/<%= c.id %>">candy name here</a></p>
          <% end %>
        </div>
        <div class="three columns">
          <% @candies[@candies.length/4+1..2*@candies.length/4].each do |c| %>
            <p><a href="/countries/<%= @country.id %>/candies/<%= c.id %>">candy name here</a></p>
          <% end %>
        </div>
        <div class="three columns">
          <% @candies[2*@candies.length/4+1..3*@candies.length/4].each do |c| %>
            <p><a href="/countries/<%= @country.id %>/candies/<%= c.id %>">candy name here</a></p>
          <% end %>
        </div>
        <div class="three columns">
          <% @candies[3*@candies.length/4+1..-1].each do |c| %>
            <p><a href="/countries/<%= @country.id %>/candies/<%= c.id %>">candy name here</a></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>