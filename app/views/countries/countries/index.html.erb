<div class="container">
  <div class="header row">
    <div class="twelve columns">
      <h4>Candylands</h4>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <div class="sh-content">
        <div class="three columns content">
          <% @countries[0..@countries.length/4].each do |c| %>
            <p><a href="/countries/<%= c.id %>/candies"><%= c.name %></a></p>
          <% end %>
        </div>
        <div class="three columns">
          <% @countries[@countries.length/4+1..2*@countries.length/4].each do |c| %>
            <p><a href="/countries/<%= c.id %>/candies"><%= c.name %></a></p>
          <% end %>
        </div>
        <div class="three columns">
          <% @countries[2*@countries.length/4+1..3*@countries.length/4].each do |c| %>
            <p><a href="/countries/<%= c.id %>/candies"><%= c.name %></a></p>
          <% end %>
        </div>
        <div class="three columns">
          <% @countries[3*@countries.length/4+1..-1].each do |c| %>
            <p><a href="/countries/<%= c.id %>/candies"><%= c.name %></a></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>